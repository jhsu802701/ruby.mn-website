%html{html_attrs}
  %head
    %link{:rel => 'alternate', :href => '/pevents/rss', :type => 'application/rss+xml', :title => "Ruby Users of Minnesota Feed"}
    %title= "Ruby Users of Minnesota"
    %meta{:content => 'Ruby Users of Minnesota is a monthly meeting held by programmers discussing varied topics' :name => 'description'}
    %meta{:content => 'ruby, ruby on rails, minnesota, minneapolis, st. paul, rum' :name => 'keywords'}
    %meta{:content => 'all,follow' :name => 'robots'}
    %meta{:content => 'Ruby Users of Minnesota' :lang => 'en' :name => 'author'}
    = stylesheet_link_tag 'reset', 'application'
  %body
    #header
      .logo
        %h1= "Ruby Users of Minnesota"
        = image_tag 'header_bg.png', :id => 'main_header_logo'
      #navigation
        %ul
          %li= "<a href='#{root_path}' class='#{"selected"}'><strong>Home</strong><p>Overview of everything</p></a>"
          %li= "<a href='#'><strong>Events</strong><p>Meetups and more</p></a>"
          %li= "<a href='#{projects_path}'><strong>Members</strong><p>People and Projects</p></a>"
          %li= "<a href='#{for_hires_path}'><strong>For Hire</strong><p>Ruby developers</p></a>"
    .wrapper
      .inner
        #body
          #left-column
            - if flash[:success]
              .success= flash[:success]
            - if flash[:notice]
              .notice= flash[:notice]
            - if flash[:error]
              .error= flash[:error]
            %div
              = yield
          #right-column
            = render(:partial => "shared/sidebar")
          .clear
          #bottom-column
            %h3= "Monthly Meeting"
            %p= "Our group meets on the <strong>last Monday of each month at 7 PM</strong> (come early to hack Ruby code)"
            %div
              %p= "Our meetings are held at:"
              %div#meeting-place
                %span.big
                  %b
                  %a{:href=>'http://www.refactr.com', :target=>'_blank'}
                    Refactr
                %p
                  %a{:id=>'maplink', :href=>'#map'}
                    Eleven North-East Fourth Street
                  %br/
                  Suite 300
                  %br/
                  Minneapolis, MN 55413
                  %br/
                  Phone: 612-605-9740
    #footer
      .inner
        #copyright
          = "&copy; #{Time.now.year} #{link_to 'Ruby Users of Minnesota', '/'}"
        #credits
          = "Original site #{link_to 'mml', 'http://bitbucket.org/mml'}, Design #{link_to '@marknutter', 'http://nuttersmark.com/'}, Implementation #{link_to '@webandy', 'http://webandy.com/'}"
      
    %script{ :src=>"http://www.google-analytics.com/urchin.js", :type=>"text/javascript"}
    %script{:type=>"text/javascript"}
      _uacct = "UA-755912-2";
      urchinTracker();