-@version= `hg tip`.split[1].split(':')[1]
=doctype_header
%html
  %head
    = encoding
    %link{:rel=>'alternate', :href=>'/pevents/rss', :type=>'application/rss+xml', :title=>"RUM Feed"}
    %title
      RUM :: Ruby Users of Minnesota Version
      = @version
    =stylesheet_link_tag 'reset-fonts-grids'
    =stylesheet_link_tag 'type'
    =stylesheet_link_tag 'base_layout'
    =javascript_include_tag :defaults
    =javascript_include_tag 'control.modal.2.2.3.js'

  %body

    %div#doc.yui-t5
      %div#hd
        %h1
          %a{:href=>"/"}="Ruby Users of Minnesota"
        .flashinfo
          = flash[:info]
          = flash[:notice]
        .flasherror
          = flash[:error]
          = flash[:warning]

      %div.bd
        %div#yui-main
          %div.yui-b
            %div.yui-g
              =yield
        %div.yui-b
          <!-- right nav bar -->
          =(yield :sidebar) || render(:partial => "shared/sidebar")

      %div#ft
        =(yield :footer) || render(:partial => "shared/footer")


    %script{ :src=>"http://www.google-analytics.com/urchin.js", :type=>"text/javascript"}
    %script{:type=>"text/javascript"}
      _uacct = "UA-755912-2";
      urchinTracker();
