=doctype_header
%html
  %head
    = encoding
    %link{:rel=>'alternate', :href=>'/pevents/rss', :type=>'application/rss+xml', :title=>"RUM Feed"}
    %title
      ="RUM :: #{SVERSION}"
    =stylesheet_link_tag 'blueprint/screen',  'base_layout',  :cache=>true
    =javascript_include_tag :defaults
    =javascript_include_tag 'control.modal.2.2.3.js'

  %body
    .container

      .span-24
        %h1
          %a#banner{:href=>"/"}="Ruby Users of Minnesota"
        -if flash[:success]
          .success
            = flash[:success]
        -if flash[:notice]
          .notice
            = flash[:notice]
        -if flash[:error]
          .error
            = flash[:error]

      .span-20
        =yield
      .span-4.last
        <!-- right nav bar -->
        = render(:partial => "shared/sidebar")



  %script{ :src=>"http://www.google-analytics.com/urchin.js", :type=>"text/javascript"}
  %script{:type=>"text/javascript"}
    _uacct = "UA-755912-2";
    urchinTracker();
