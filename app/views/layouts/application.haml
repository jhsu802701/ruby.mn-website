=doctype_header
%html
  %head
    = encoding
    %title
      RUM :: Ruby Users of Minnesota
    =stylesheet_link_tag 'reset-fonts-grids'
    =stylesheet_link_tag 'type'
    =stylesheet_link_tag 'base_layout'
    =javascript_include_tag :defaults

  %body
    .flashinfo
      = flash[:info]
      = flash[:notice]
    .flasherror
      = flash[:error]

    %div#doc.yui-t5
      %div#hd
        %h1
          %a{:href=>"/"}="Ruby Users of Minnesota"

      %div.bd
        %div#yui-main
          %div.yui-b
            %div.yui-g
              =yield
        %div.yui-b
          <!-- right nav bar -->
          =(yield :sidebar) || render(:partial => "shared/sidebar")

      %div#ft
        =(yield :footer) || render(:partial => "shared/footer")


    %script{ :src=>"http://www.google-analytics.com/urchin.js", :type=>"text/javascript"}
    %script{:type=>"text/javascript"}
      _uacct = "UA-755912-2";
      urchinTracker();
