%div[event]
  %h3= event.headline
  .time= event.scheduled_time.to_s(:short)

  %p.posted_by
    Posted by
    = mail_to event.try(:user).try(:email), event.try(:user).try(:login)

  [ #{ link_to "Approve", admin_approve_event_path(event), :method => :put } #{ link_to "Delete", event, :method => :delete, :confirm => 'Are you sure?' } ]

  .content= mup event.body
