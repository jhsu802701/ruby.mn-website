- mail = mail_header
.mailheader
  =link_to_remote(h(mail.subject),:url=>{:controller=>'archive', :action=>"message", :id=>mail.id })
  %br/
  =h(mail.stamp)
  %br/
  =h(mail.from).gsub(/@/, ' from ')
  %br/
  %div[mail]
  - if mail.children_count > 0 
    %br/
    References:
    - mail.all_children.each do |c|
      %br/
      - (0..c.depth).each do
        ="&nbsp;"
      =link_to c.subject, :action=>'show', :id=>c.id
      &nbsp;
