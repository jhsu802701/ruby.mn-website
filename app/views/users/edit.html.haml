.introduction
  %h2 Edit User Account

.form
  = form_for @user do |f|
    = f.error_messages
    %fieldset
      = f.label :email
      = f.text_field :email
      %br/
      = f.label :firstname, 'First Name'
      = f.text_field :firstname
      %br/
      = f.label :lastname, 'Last Name'
      = f.text_field :lastname

      = f.submit 'Update Account'
