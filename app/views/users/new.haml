-unless @user.errors.empty?
  =error_messages_for 'user'
.form{:title=>"Create Account"}
  -form_for :user, :url=>users_path do |f|
    %fieldset
      %legend
        Sign Up

      %p
        %label
          First Name:
        %br/
        =f.text_field "firstname", :class=>'title'
      %p
        %label
          Last Name:
        %br/
        =f.text_field "lastname", :class=>'text'
      %p
        %label
          Username
        %br/
        =f.text_field "login", :class=>'text'
      %p
        %label
          Email
        %br/
        =f.text_field "email", :class=>'text'
      %p
        %label
          Password
        %br/
        =f.password_field "password", :class=>'text'
      %p
        %label
          Confirm Password
        %br/
        =f.password_field "password_confirmation", :class=>'text'
      %p
        =get_captcha
        .submit
          =submit_tag "signup"
          =link_to "Cancel", new_session_path

